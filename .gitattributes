# Ignore HTML files generated by React
*.html linguist-vendored

# Ensure JavaScript files are recognized correctly
*.js linguist-language=JavaScript

# Ensure Python files are recognized correctly
*.py linguist-language=Python

# Ensure shell scripts are recognized correctly
*.sh linguist-language=Bash

*.tf linguist-language=HCL
*.tfvars linguist-language=HCL


# Override HTML detection for React components
frontend/src/components/*.js linguist-language=JavaScript
frontend/src/components/*.jsx linguist-language=JavaScript

# Ensure Python files are correctly identified
backend/**/*.py linguist-language=Python

# Specify shell scripts
scripts/*.sh linguist-language=Shell

# Terraform files
infra/**/*.tf linguist-language=Terraform
